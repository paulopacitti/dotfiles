{
  "title": "Lock Screen",
  "rules": [
    {
      "description": "Use Pause to Lock Screen",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "pause",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}